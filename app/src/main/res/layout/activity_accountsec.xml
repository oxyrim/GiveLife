<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/accpic"
    tools:context="com.example.sonam.givelife.Accountsec"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text=" Profile Information "
        android:layout_gravity="center"
        android:singleLine="true"
        android:drawableLeft="@drawable/user1"
        android:id="@+id/textpro"
        android:layout_below="@+id/txtStatus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:paddingLeft="30dp"
        android:textStyle="italic"
        android:text=" Username "
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:id="@+id/txtUser"
        android:layout_below="@+id/txtUser"
        android:layout_alignParentStart="true"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="visible"
        android:background="#c1cdcd"
        android:id="@+id/view4"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:paddingLeft="30dp"
        android:text=" Name "
        android:textStyle="bold"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:id="@+id/txtStatus"
        android:layout_below="@+id/txtUser"
        android:layout_alignParentStart="true"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingTop="15dp"
        android:paddingBottom="2dp"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:text=" Profile Activity "
        android:drawableLeft="@drawable/acti"
        android:layout_gravity="center"
        android:singleLine="true"
        android:id="@+id/textelie"
        android:layout_below="@+id/txtStatus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="13dp"
        android:paddingBottom="8dp"
        android:paddingLeft="30dp"
        android:text="Eligibility"
        android:drawableLeft="@drawable/eligible"
        android:drawableRight="@drawable/tri"
        android:layout_gravity="center"
        android:drawablePadding="10dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:id="@+id/texteli"
        android:layout_below="@+id/textelie"
        android:layout_alignParentStart="true" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="visible"
        android:background="#c1cdcd"
        android:id="@+id/view3"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:text="Post"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/post"
        android:drawableRight="@drawable/tri"
        android:drawablePadding="10dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:id="@+id/textpos"
        android:layout_below="@+id/texteli"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="visible"
        android:background="#c1cdcd"
        android:id="@+id/view2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:text="Information"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/information"
        android:drawableRight="@drawable/tri"
        android:drawablePadding="10dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:id="@+id/textinfo"
        android:layout_below="@+id/textpos"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:paddingTop="18dp"
        android:paddingBottom="2dp"
        android:paddingLeft="30dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:drawableLeft="@drawable/sett"
        android:text=" Account Setting "
        android:layout_gravity="center"
        android:singleLine="true"
        android:id="@+id/textacc"
        android:layout_below="@+id/textinfo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="13dp"
        android:paddingLeft="30dp"
        android:text="Delete Account"
        android:layout_gravity="center"
        android:drawableRight="@drawable/tri"
        android:drawableLeft="@drawable/delete"
        android:drawablePadding="10dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:id="@+id/textDel"
        android:layout_below="@+id/textinfo"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="visible"
        android:background="#c1cdcd"
        android:id="@+id/view1"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:text=" Update Information "
        android:layout_gravity="center"
        android:drawableRight="@drawable/tri"
        android:drawableLeft="@drawable/update"
        android:drawablePadding="10dp"
        android:background="#ffffff"
        android:singleLine="true"
        android:id="@+id/textUp"
        android:layout_below="@+id/textinfo"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:background="@drawable/roundedittext"
        android:layout_marginTop="20dp"
        android:id="@+id/blogout" />


</LinearLayout>
</ScrollView>